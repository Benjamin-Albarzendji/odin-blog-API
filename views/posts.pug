extends layout

block content
  h1= title
  p Welcome to #{title}
  

  //- This is where the blog posts will be displayed, from the variable "allPosts" with  a container for each post
  .posts-container
    each post in allPosts
      .post
        h2= post.title
        p= post.content
        p= post.author
        p= post.date
        p= post.tags
        p= post.id
        a(href=`posts/${post.id}`) View Post
        a(href=`/posts/${post.id}/edit`) Edit Post
        a(href=`/posts/${post.id}/delete`) Delete Post
  
